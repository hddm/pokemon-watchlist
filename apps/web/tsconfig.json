{
  "extends": "tsconfig/nextjs.json",
  "include": ["src", "__mocks__", "__tests__"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
